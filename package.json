{
  "name": "@btrl/cli",
  "type": "module",
  "version": "1.0.4",
  "description": "基于vue3生态的个人脚手架工具（2023版）",
  "author": "KC <orangelckc@hotmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/orangelckc/kc-cli",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/orangelckc/kc-cli.git"
  },
  "bugs": {
    "url": "https://github.com/orangelckc/kc-cli/issues"
  },
  "keywords": [
    "kc-cli",
    "KC脚手架"
  ],
  "module": "src/cli.ts",
  "bin": {
    "kc": "output/cli.js"
  },
  "files": [
    "output"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "postbuild": "bun run postbuild.ts",
    "lint": "eslint . --fix",
    "publish": "npm publish --access public",
    "prepare": "bun run simple-git-hooks",
    "prepublishOnly": "bun run lint",
    "preversion": "bun run lint"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.4",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,json}": "eslint --fix"
  }
}
